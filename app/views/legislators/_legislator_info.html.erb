<div class="col-xs-8 col-xs-offset-0 pull-right" id="runner-info">
    <p><h3><strong>Committees:</strong></h3>
      <% @legislator.committees.each do |hash| %>
      <ul>
        <li><%= hash["name"] %></li>
      </ul>
      <% end %>
    </p>
</div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="col-xs-6">
      <h1 class="pull-right"style="margin-right:135px;"><strong>Authored Bills</strong></h1>
    </div>
    <div class="col-xs-6">
      <h1 class="pull-left" style="margin-left:100px;"><strong>Co-Authored Bills</strong></h1>
    </div>
  </div>
<div class="col-xs-6 pull-left outer-scroll user_bios2" style="margin-left:70px;">
  <ul class="scrolling-bills">
    <% @legislator.bill_authored.each do |hash| %>
      <li class="list-unstyled"><strong><%= hash["billName"] %></strong>:
        <%= truncate(@legislator.shortDescription(hash["billName"]), length: 30) %>. <%= link_to "Link To Bill", bill_path(hash["link"]) %>
      </li>
    <% end %>
  </ul>
</div>

<div class="col-xs-6 pull-right outer-scroll user_bios2" style="margin-right:70px;">
