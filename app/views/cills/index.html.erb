<p id="notice"><%= notice %></p>

<h1>Listing Cills</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cills.each do |cill| %>
      <tr>
        <td><%= link_to 'Show', cill %></td>
        <td><%= link_to 'Edit', edit_cill_path(cill) %></td>
        <td><%= link_to 'Destroy', cill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

