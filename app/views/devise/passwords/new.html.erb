<div class="row center">
  <div class="col-xs-8 col-xs-offset-2" style="background-color:white; margin-top:20px;">

    <h2>Forgot your password?</h2>

    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions" %><%= render "devise/shared/links" %>
      </div>
    <% end %>


  </div>
</div>
