<%= form_for @user, url:wizard_path do |f| %>

  <h2> Name </h2>

  <div class="field">
    <%= f.label :first_name %> <br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %> <br />
    <%= f.text_field :last_name %>
  </div>

  <div class="actions">
    <%= f.submit "Continue" %>
  </div>

<% end %>
