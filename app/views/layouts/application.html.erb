<!DOCTYPE html>
<html>
  <head>
    <title>Votenuity</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="wrapper">
     <%= render partial: "layouts/nav" %>

    <!-- Shows errors when one is present -->
      <div class="container" id="background">
        <div class="text-center" id="flash_hook">
          <% if flash[:error] %>
            <p class='error'><%=h flash[:error] %></p>
          <% end %>
          <% if flash[:notice] %>
            <p class='notice'><%=h flash[:notice] %></p>
          <% end %>
        </div>

        <%= yield %>

      </div>
    </div>

    <!-- start footer area -->
    <footer class="footer-distributed">

			<div class="footer-left">

				<p class="footer-links">
					<%= link_to "Home", root_path %>
					路
          <%= link_to "Legislators", legislators_path %>
					路
          <% if user_signed_in? %>
					<%= link_to "Update Account", edit_user_registration_path %>
          <% end %>
					路
					<%= link_to "About Us", root_path %>
					路
					<%= link_to "Contact Us", root_path %>
				</p>
          <p class="footer-company-name">Votenuity &copy; 2015</p>
      </div>

			<div class="footer-right">
        <form method="get" action="#">
					<input placeholder="Search Votenuity" name="search" />
					<i class="fa fa-search"></i>
				</form>
      </div>

		</footer>
    <!-- End footer area -->

  </body>
</html>
