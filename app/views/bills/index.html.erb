<h1 class="text-center"> Listing Bills for <%= params[:session] || "All Sessions" %></h1><br>
  <div class="row bill-row">
    <% @bills.each do |bill| %>
      <div class="col-xs-3 bill-list">
        <ul class="list-unstyled" style="height:150px; overflow:hidden;">
          <li><h3 class="text-center bill-title"><%= link_to bill.billName, bill_path(bill.billName) %></h3></li><br>
          <li class="text-center"><%= bill.title %></li>
          <li class='text-center'><%= bill.shortDescription %></li>
          <br>
        </ul>
        <br>
      </div>
    <%end%>
  </div>
